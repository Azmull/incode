@model IEnumerable<incode.Models.Order>

@{
    ViewData["Title"] = "訂單管理";
}

<h1>訂單管理</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">新增</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RequiresShipping)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notes)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.User.Nickname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RequiresShipping)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.OrderId" class="btn btn-primary">修改</a>
                    <a asp-action="Details" asp-route-id="@item.OrderId" class="btn btn-primary">詳細</a>
                    <a asp-action="OrderDetail" asp-route-id="@item.OrderId" class="btn btn-secondary">詳細</a>
                    <a asp-action="Delete" asp-route-id="@item.OrderId" class="btn btn-danger">刪除</a>

            </td>
        </tr>
}
    </tbody>
</table>
