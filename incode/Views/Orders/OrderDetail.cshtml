@model IEnumerable<incode.ViewModels.OrderDetailViewModel>


@{
    ViewData["Title"] = "訂單詳細";
}

<div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderDetailId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UnitPriceAtPurchase)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsShipped)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Notes)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDetailId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnitPriceAtPurchase)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsShipped)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td>
                <form asp-action="DeleteOrderDetail">
                @* <input type="hidden" asp-for="item.OrderDetailId" /> *@
                <input type="submit" value="刪除" class="btn btn-danger" />
                </form>
            </td>
        </tr>
    }
</table>
<a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>
