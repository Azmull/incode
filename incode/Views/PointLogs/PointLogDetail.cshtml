@model List<incode.ViewModels.PointLogViewModel>

@{
    ViewData["Title"] = "後台 - 查看使用者點數明細";
}

<div class="container mt-4">
    <h2 class="text-center mb-4 fw-bold text-primary">後台管理 - 使用者點數明細查詢</h2>

    <!-- 使用者選擇表單 -->
    <div class="card shadow mb-4 border-primary">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">選擇要查看的使用者</h5>
        </div>
        <div class="card-body">
            <form asp-action="PointLogDetail" method="get" class="row g-3 align-items-end">
                <div class="col-lg-5 col-md-6">
                    <label class="form-label fw-bold">使用者</label>
                    <select name="userId" class="form-select form-select-lg" asp-items="ViewBag.UserList">
                        <option value="">-- 請選擇使用者 --</option>
                    </select>
                </div>
                <div class="col-lg-3 col-md-4">
                    <button type="submit" class="btn btn-primary btn-lg w-100">
                        <i class="bi bi-search"></i> 查詢點數明細
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- 只有選擇了使用者才顯示明細內容 -->
    @if (ViewBag.SelectedUserId != null)
    {
        <div class="text-center mb-4">
            <div class="display-5 fw-bold text-success">
                總點數：@ViewBag.CurrentTotalPoints.ToString("N0") 點
            </div>
            <div class="text-muted fs-5">使用者 ID：@ViewBag.SelectedUserId</div>
        </div>

        @if (Model.Any())
        {
            <div class="table-responsive shadow rounded">
                <table class="table table-hover table-striped align-middle mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th class="text-center">時間</th>
                            <th class="text-center">類型</th>
                            <th class="text-center">異動點數</th>
                            <th class="text-start">說明</th>
                            <th class="text-end">異動後餘額</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center small text-muted">
                                    @item.CreatedAt.ToString("yyyy-MM-dd")
                                    <br />
                                    @item.CreatedAt.ToString("HH:mm")
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-secondary px-3 py-2 fs-6">@item.TypeDisplayName</span>
                                </td>
                                <td class="text-center fw-bold fs-4 @item.ChangeAmountCss">
                                    @item.ChangeAmountText
                                </td>
                                <td class="text-start">@item.Description</td>
                                <td class="text-end fw-bold fs-4">
                                    @item.NewBalance.ToString("N0") 點
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5 bg-light rounded shadow">
                <i class="bi bi-inbox display-1 text-muted mb-4"></i>
                <p class="fs-3 text-muted">此使用者目前沒有任何點數異動紀錄</p>
            </div>
        }
    }
    else
    {
        <div class="text-center py-5 bg-light rounded shadow">
            <i class="bi bi-person-plus display-1 text-muted mb-4"></i>
            <p class="fs-3 text-muted">請從上方選擇一位使用者開始查詢</p>
        </div>
    }
</div>

@section Scripts {
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

    <!-- 保持下拉選單選取狀態 -->
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const select = document.querySelector('select[name="userId"]');
            const selectedId = "@ViewBag.SelectedUserId";
            if (select && selectedId && selectedId !== "null") {
                select.value = selectedId;
            }
        });
    </script>
}



