@model incode.ViewModels.PostCreateViewModel

@{
    ViewData["Title"] = "新增文章";
}

<h1>新增文章</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Title" class="control-label">文章標題</label>
                <input asp-for="Title" class="form-control" placeholder="請輸入標題" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="PostsContent" class="control-label">文章內容</label>
                <textarea asp-for="PostsContent" class="form-control" rows="10"></textarea>
                <span asp-validation-for="PostsContent" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="發布文章" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}