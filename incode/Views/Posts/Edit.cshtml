@model incode.Models.Post

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Post</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PostsId" />
            <div class="form-group">
                <label asp-for="PostsUserId" class="control-label"></label>
                <select asp-for="PostsUserId" class="form-control" asp-items="ViewBag.PostsUserId"></select>
                <span asp-validation-for="PostsUserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PostsContent" class="control-label"></label>
                <input asp-for="PostsContent" class="form-control" />
                <span asp-validation-for="PostsContent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PostsViewCount" class="control-label"></label>
                <input asp-for="PostsViewCount" class="form-control" />
                <span asp-validation-for="PostsViewCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PostsCreatedAt" class="control-label"></label>
                <input asp-for="PostsCreatedAt" class="form-control" />
                <span asp-validation-for="PostsCreatedAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PostsUpdatDate" class="control-label"></label>
                <input asp-for="PostsUpdatDate" class="form-control" />
                <span asp-validation-for="PostsUpdatDate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsCommission" /> @Html.DisplayNameFor(model => model.IsCommission)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
