@model IEnumerable<incode.Models.Post>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PostsContent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PostsViewCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PostsCreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PostsUpdatDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsCommission)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PostsUser)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostsContent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostsViewCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostsCreatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostsUpdatDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsCommission)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostsUser.Nickname)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PostsId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PostsId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PostsId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
